% ==============================
% Inserting into beamer patterns
% ==============================

% Main color
\setbeamercolor{structure}{fg=nhhblue}

% Text
\setbeamercolor{normal text}{fg=contrastblack}
\setbeamercolor{alerted text}{fg=contrastred}

% Titles
\setbeamercolor{titlelike}{fg=supportwhite, bg=nhhblue}

\setbeamercolor*{title page text}{fg=supportwhite, bg=}
\setbeamercolor*{title in title page}{parent=title, fg=supportwhite, bg=}
\setbeamercolor*{section title in section page}{parent=section title, fg=supportwhite, bg=}

\setbeamercolor{author}{parent=title page text}
\setbeamercolor{institute}{parent=title page text}
\setbeamercolor{date}{parent=title page text}
\setbeamercolor{titlegraphic}{parent=title page text}

% Palettes
\setbeamercolor{palette primary}{fg=white, bg=nhhblue}
\setbeamercolor{palette secondary}{fg=white, bg=nhhblue!80!profileblue2}
\setbeamercolor{palette tertiary}{fg=white, bg=nhhblue!60!profileblue2}
\setbeamercolor{palette quaternary}{fg=white, bg=nhhblue!40!profileblue2}

\setbeamercolor{palette sidebar primary}{fg=white, bg=nhhblue}

% Sidebar
\setbeamercolor*{sidebar}{fg=supportwhite,bg=nhhblue}
\setbeamercolor*{section in sidebar}{parent=sidebar}
\setbeamercolor*{subsection in sidebar}{parent=sidebar}
\setbeamercolor*{title in sidebar}{parent=sidebar}
\setbeamercolor*{author in sidebar}{parent=sidebar, fg=contrastyellow}

% Separator between columns
\setbeamercolor*{column separator}{bg=contrastyellow}


